<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/employeePicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/employeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            app:layout_constraintTop_toTopOf="@id/employeePicture"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/employeeDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            app:layout_constraintTop_toBottomOf="@id/employeeName"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/employeeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"

            app:layout_constraintTop_toBottomOf="@id/employeeEmail"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/employeeUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            app:layout_constraintTop_toBottomOf="@id/employeeUsername"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/employeePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            app:layout_constraintTop_toBottomOf="@id/employeePicture"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/employeePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            app:layout_constraintTop_toBottomOf="@id/employeePassword"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/employeeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            app:layout_constraintTop_toBottomOf="@id/employeePhone"
            app:layout_constraintStart_toEndOf="@id/employeePicture"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
